@model Pet

<input asp-for="Id"/>
<div class="mb-3">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Tipo"></label>
    <select asp-for="Tipo" class="form-select"
            asp-items="@Html.GetEnumSelectList<Pet.TipoPet>()">
        <option>Selecione</option>
    </select>
</div>
<div class="mb-3">
    <label asp-for="Raca"></label>
    <input asp-for="Raca" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="DataNascimento"></label>
    <input asp-for="DataNascimento" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Sexo"></label>
    <select asp-for="Sexo" class="form-select"
            asp-items="@Html.GetEnumSelectList<Pet.SexoPet>()">
        <option>Selecione</option>
    </select>
</div>
<div class="mb-3">
    <label asp-for="Peso"></label>
    <input asp-for="Peso" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="NomeDono"></label>
    <input asp-for="NomeDono" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="ContatoDono"></label>
    <input asp-for="ContatoDono" class="form-control" />
</div>
<div class="mb-3">
    <label asp-for="Vacinado"></label>
    <input asp-for="Vacinado"/>
</div>